<div class="layout">
  <div class="full">
    <h1>NPC Settings</h1>
    <a class="button" href="">Features</a>
    <a class="button" href="">Actions</a>
    <a class="button" href="">Legendary Actions</a>
    <a class="button" href="">Lair Actions</a>
    <a class="button" href="">Regional Effects</a>
    <a class="button" href="">Spells</a>
    <h2><%= @npc.name %></h2>
    <a class="button" href="<%= npc_path @npc %>">Back</a>
    <%= render partial: "shared/creature-form", locals: { creature: @npc, form_url: npc_path(@npc) } %>
    <%= button_to "Delete", { :controller => :npcs, :action => 'destroy', :id => @npc.id }, :class => 'button button-destructive', :method => :delete %>
  </div>
</div>