<%= form_for @spell do |f| %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :level %>
    <%= f.number_field :level %>
    <%= f.label :school %>
    <%= 
      f.select :school, options_for_select([
        nil,
        CoreRules::SpellSchools::ABJURATION,
        CoreRules::SpellSchools::CONJURATION,
        CoreRules::SpellSchools::DIVINATION,
        CoreRules::SpellSchools::ENCHANTMENT,
        CoreRules::SpellSchools::EVOCATION,
        CoreRules::SpellSchools::ILLUSION,
        CoreRules::SpellSchools::NECROMANCY,
        CoreRules::SpellSchools::TRANSMUTATION
      ], @spell.school)
    %>
    <%= f.label :casting_time %>
    <%= f.text_field :casting_time %>
    <%= f.label :duration %>
    <%= f.text_field :duration %>
    <%= f.label :range %>
    <%= f.text_field :range %>
    <%= f.label :target %>
    <%= f.text_field :target %>
    <%= f.label :components %>
    <%= f.text_field :components %>
    <%= f.label :concentration %>
    <%= f.check_box :concentration %>
    <%= f.label :material_components %>
    <%= f.check_box :material_components %>
    <%= f.label :somatic_components %>
    <%= f.check_box :somatic_components %>
    <%= f.label :verbal_components %>
    <%= f.check_box :verbal_components %>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.label :description_higher_levels %>
    <%= f.text_area :description_higher_levels %>
  </fieldset>
  <fieldset>
    <%= f.submit :class => 'button button-constructive' %>
  </fieldset>
<% end %>