<div class="layout">
  <div class="full">
    <h1>Creature Settings - Edit Features</h1>
    <h2><%= @creature.name %></h2>
    <a class="button" href="<%= edit_creature_path @creature %>">Back</a>
    <%= form_for @creature do |f| %>
      <div id="creature-features-form">
        <%= f.fields_for :creature_features do |feature| %>
          <fieldset>
            <%= feature.label :name %>
            <%= feature.text_field :name %>
            <%= feature.label :description %>
            <%= feature.text_area :description %>
            <%= feature.label(:_destroy, "Remove") %>
            <%= feature.check_box(:_destroy) %>
          </fieldset>
        <% end %>
      </div>
      <button class="button" name="creature-form-add-feature-button" type="button">Add Feature</button>
      <%= f.submit :class => 'button button-constructive' %>
    <% end %>
  </div>
</div>