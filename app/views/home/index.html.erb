<div class="layout">
  <div class="full">
    <h1>The D&D Compendium</h1>
    <div class="image-panel-grid">
      <%= render partial: 'shared/image_panel', locals: { image_panel_path: characters_path, image_panel_image_path: 'home-page-characters-tile.png', image_panel_title: 'Characters' } %>
      <%= render partial: 'shared/image_panel', locals: { image_panel_path: creatures_path, image_panel_image_path: 'home-page-creatures-tile.png', image_panel_title: 'Creatures' } %>
      <%= render partial: 'shared/image_panel', locals: { image_panel_path: factions_path, image_panel_image_path: 'home-page-factions-tile.png', image_panel_title: 'Factions' } %>
      <%= render partial: 'shared/image_panel', locals: { image_panel_path: magic_items_path, image_panel_image_path: 'home-page-magic-items-tile.png', image_panel_title: 'Magic Items' } %>
      <%= render partial: 'shared/image_panel', locals: { image_panel_path: locations_path, image_panel_image_path: 'home-page-locations-tile.png', image_panel_title: 'Locations' } %>
      <% if user_signed_in? %>
        <%= render partial: 'shared/image_panel', locals: { image_panel_path: spells_path, image_panel_image_path: 'home-page-spells-tile.png', image_panel_title: 'Spells' } %>
      <% end %>
    </div>
  </div>
</div>