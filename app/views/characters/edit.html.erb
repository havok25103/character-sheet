<div class="layout">
  <div class="full">
    <h1>Character Settings</h1>
    <a class="button" href=<%= character_edit_attacks_path @character %>>Attacks</a>
    <a class="button" href=<%= character_edit_features_path @character %>>Features</a>
    <a class="button" href=<%= character_edit_inventory_path @character %>>Inventory</a>
    <a class="button" href=<%= character_edit_resources_path @character %>>Resources</a>
    <a class="button" href=<%= character_edit_spells_path @character %>>Spells</a>
    <%= button_to "Delete", { :controller => :characters, :action => 'destroy', :id => @character.id }, :class => 'button button-destructive', :method => :delete %>
    <h2><%= @character.name %></h2>
    <%= render "form" %>
  </div>
</div>