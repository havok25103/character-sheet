          <%= spell.label :somatic_components %>
          <%= spell.check_box :somatic_components %>
          <%= spell.label :verbal_components %>
          <%= spell.check_box :verbal_components %>
          <%= spell.label :description %>
          <%= spell.text_area :description %>
          <%= spell.label :description_higher_levels %>
          <%= spell.text_area :description_higher_levels %>
          <%= spell.label(:_destroy, "Remove") %>
          <%= spell.check_box(:_destroy) %>
        </fieldset>
      <% end %>
    </div>
  </div>
  <%= f.submit :class => 'button button-constructive' %>
<% end %>
