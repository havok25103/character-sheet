        <%= f.number_field :athletics_mod %>
        <%= f.select :athletics_prof, ["none", "prof", "exp"], selected: @character.athletics_prof %>
      </fieldset>
      <fieldset>
        <%= f.label :deception_mod %>
        <%= f.number_field :deception_mod %>
        <%= f.select :deception_prof, ["none", "prof", "exp"], selected: @character.deception_prof %>
      </fieldset>
      <fieldset>
        <%= f.label :history_mod %>
        <%= f.number_field :history_mod %>
        <%= f.select :history_prof, ["none", "prof", "exp"], selected: @character.history_prof %>
      </fieldset>
      <fieldset>
        <%= f.label :insight_mod %>
        <%= f.number_field :insight_mod %>
        <%= f.select :insight_prof, ["none", "prof", "exp"], selected: @character.insight_prof %>
      </fieldset>
      <fieldset>
        <%= f.label :intimidation_mod %>
        <%= f.number_field :intimidation_mod %>
        <%= f.select :intimidation_prof, ["none", "prof", "exp"], selected: @character.intimidation_prof %>
      </fieldset>
      <fieldset>
        <%= f.label :investigation_mod %>
