        <%= f.number_field :spell_slots_eighth %>
        <%= f.label :spell_slots_ninth %>
        <%= f.number_field :spell_slots_ninth %>
      </fieldset>
      <%= f.fields_for :character_spells do |spell| %>
        <fieldset>
          <%= spell.label :name %>
          <%= spell.text_field :name %>
          <%= spell.label :level %>
          <%= spell.number_field :level %>
          <%= spell.label :school %>
          <%= spell.text_field :school %>
