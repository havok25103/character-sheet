      <fieldset>
        <%= f.label :persuasion_mod %>
        <%= f.number_field :persuasion_mod %>
        <%= f.select :persuasion_prof, ["none", "prof", "exp"], selected: @character.persuasion_prof %>
      </fieldset>
      <fieldset>
        <%= f.label :religion_mod %>
        <%= f.number_field :religion_mod %>
        <%= f.select :religion_prof, ["none", "prof", "exp"], selected: @character.religion_prof %>
      </fieldset>
      <fieldset>
        <%= f.label :sleight_of_hand_mod %>
        <%= f.number_field :sleight_of_hand_mod %>
        <%= f.select :sleight_of_hand_prof, ["none", "prof", "exp"], selected: @character.sleight_of_hand_prof %>
      </fieldset>
      <fieldset>
        <%= f.label :stealth_mod %>
        <%= f.number_field :stealth_mod %>
        <%= f.select :stealth_prof, ["none", "prof", "exp"], selected: @character.stealth_prof %>
      </fieldset>
      <fieldset>
        <%= f.label :survival_mod %>
        <%= f.number_field :survival_mod %>
        <%= f.select :survival_prof, ["none", "prof", "exp"], selected: @character.survival_prof %>
      </fieldset>
      <fieldset>
        <%= f.label :passive_perception %>
        <%= f.number_field :passive_perception %>
      </fieldset>
      <h3>Character Proficiencies</h3>
      <fieldset>
        <%= f.label :armor_proficiencies %>
        <%= f.text_field :armor_proficiencies %>
        <%= f.label :tool_proficiencies %>
        <%= f.text_field :tool_proficiencies %>
        <%= f.label :weapon_proficiencies %>
        <%= f.text_field :weapon_proficiencies %>
        <%= f.label :condition_immunities %>
        <%= f.text_field :condition_immunities %>
        <%= f.label :condition_resistances %>
        <%= f.text_field :condition_resistances %>
        <%= f.label :condition_vulnerabilities %>
        <%= f.text_field :condition_vulnerabilities %>
        <%= f.label :damage_immunities %>
        <%= f.text_field :damage_immunities %>
        <%= f.label :damage_resistances %>
        <%= f.text_field :damage_resistances %>
        <%= f.label :damage_vulnerabilities %>
        <%= f.text_field :damage_vulnerabilities %>
        <%= f.label :senses %>
        <%= f.text_field :senses %>
        <%= f.label :languages %>
        <%= f.text_field :languages %>
      </fieldset>
      <h3>Biography</h3>
      <fieldset>
        <%= f.label :personality_traits %>
        <%= f.text_area :personality_traits %>
        <%= f.label :ideals %>
        <%= f.text_area :ideals %>
        <%= f.label :bonds %>
        <%= f.text_area :bonds %>
        <%= f.label :flaws %>
        <%= f.text_area :flaws %>
        <%= f.label :age %>
        <%= f.number_field :age %>
        <%= f.label :eyes %>
        <%= f.text_field :eyes %>
        <%= f.label :hair %>
        <%= f.text_field :hair %>
        <%= f.label :height %>
        <%= f.text_field :height %>
        <%= f.label :skin %>
        <%= f.text_field :skin %>
        <%= f.label :weight %>
        <%= f.text_field :weight %>
      </fieldset>
      <h3>Inventory</h3>
      <%= f.fields_for :character_items do |item| %>
        <fieldset>
          <%= item.label :name %>
          <%= item.text_field :name %>
          <%= item.label :total %>
          <%= item.number_field :total %>
          <%= item.label :description %>
          <%= item.text_area :description %>
          <%= item.label(:_destroy, "Remove") %>
          <%= item.check_box(:_destroy) %>
        </fieldset>
      <% end %>
      <fieldset>
        <%= f.label :copper_pieces %>
        <%= f.number_field :copper_pieces %>
        <%= f.label :silver_pieces %>
        <%= f.number_field :silver_pieces %>
        <%= f.label :electrum_pieces %>
        <%= f.number_field :electrum_pieces %>
        <%= f.label :gold_pieces %>
        <%= f.number_field :gold_pieces %>
        <%= f.label :platinum_pieces %>
        <%= f.number_field :platinum_pieces %>
      </fieldset>
    </div>
    <div class="column">
      <h3>Attacks</h3>
      <div id="character-form-attacks">
        <%= f.fields_for :character_attacks do |attack| %>
          <fieldset>
            <%= attack.label :name %>
            <%= attack.text_field :name %>
            <%= attack.label :attack_bonus %>
            <%= attack.number_field :attack_bonus %>
            <%= attack.label :crit_range %>
            <%= attack.number_field :crit_range %>
            <%= attack.label :damage_dice_roll %>
            <%= attack.text_field :damage_dice_roll %>
            <%= attack.label :damage_two_dice_roll %>
            <%= attack.text_field :damage_two_dice_roll %>
            <%= attack.label :damage_two_type %>
            <%= attack.text_field :damage_two_type %>
            <%= attack.label :damage_type %>
            <%= attack.text_field :damage_type %>
            <%= attack.label :description %>
            <%= attack.text_area :description %>
            <%= attack.label :is_saving_throw %>
            <%= attack.check_box :is_saving_throw %>
            <%= attack.label :range %>
            <%= attack.text_area :range %>
            <%= attack.label :saving_throw_description %>
            <%= attack.text_area :saving_throw_description %>
            <%= attack.label :saving_throw_threshold %>
            <%= attack.number_field :saving_throw_threshold %>
            <%= attack.label :saving_throw_type %>
            <%= attack.text_field :saving_throw_type %>
            <%= attack.label(:_destroy, "Remove") %>
            <%= attack.check_box(:_destroy) %>
          </fieldset>
        <% end %>
      </div>
      <button name="character-form-add-attack-button" type="button">Add Attack</button>
      <h3>Features</h3>
      <div id="character-form-features">
        <%= f.fields_for :character_features do |feature| %>
          <fieldset>
            <%= feature.label :name %>
            <%= feature.text_field :name %>
            <%= feature.label :source %>
            <%= feature.text_field :source %>
            <%= feature.label :feature_type %>
            <%= feature.text_field :feature_type %>
            <%= feature.label :description %>
            <%= feature.text_area :description %>
            <%= feature.label(:_destroy, "Remove") %>
            <%= feature.check_box(:_destroy) %>
          </fieldset>
        <% end %>
      </div>
      <button name="character-form-add-feature-button" type="button">Add Feature</button>
      <h3>Feature Resources</h3>
      <div id="character-form-feature-resources">
        <%= f.fields_for :character_feature_resources, remote: true do |feature_resource| %>
          <fieldset>
            <%= feature_resource.label :name %>
            <%= feature_resource.text_field :name %>
            <%= feature_resource.label :total %>
            <%= feature_resource.number_field :total %>
            <%= feature_resource.label(:_destroy, "Remove") %>
            <%= feature_resource.check_box(:_destroy) %>
          </fieldset>
        <% end %>
      </div>
      <button name="character-form-add-feature-resource-button" type="button">Add Feature Resource</button>
      <h3>Spellcasting</h3>
      <fieldset>
        <%= f.label :spellcasting_ability %>
        <%= f.text_field :spellcasting_ability %>
        <%= f.label :spellcasting_modifier %>
        <%= f.text_field :spellcasting_modifier %>
        <%= f.label :spellcasting_save_dc %>
        <%= f.number_field :spellcasting_save_dc %>
      </fieldset>
      <fieldset>
        <%= f.label :spell_slots_first %>
        <%= f.number_field :spell_slots_first %>
        <%= f.label :spell_slots_second %>
        <%= f.number_field :spell_slots_second %>
        <%= f.label :spell_slots_third %>
        <%= f.number_field :spell_slots_third %>
        <%= f.label :spell_slots_fourth %>
        <%= f.number_field :spell_slots_fourth %>
        <%= f.label :spell_slots_fifth %>
        <%= f.number_field :spell_slots_fifth %>
        <%= f.label :spell_slots_sixth %>
        <%= f.number_field :spell_slots_sixth %>
