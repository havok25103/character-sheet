      </fieldset>
      <fieldset>
        <%= f.label :perception_mod %>
        <%= f.number_field :perception_mod %>
        <%= f.select :perception_prof, ["none", "prof", "exp"], selected: @character.perception_prof %>
      </fieldset>
      <fieldset>
        <%= f.label :performance_mod %>
        <%= f.number_field :performance_mod %>
        <%= f.select :performance_prof, ["none", "prof", "exp"], selected: @character.performance_prof %>
